<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.line.novelapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name="com.line.novel.ui.IndexActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.line.novel.ui.UpdatedNovelsActivity">
        </activity>
        
        <activity android:name="com.line.novel.ui.NovelListActivity">
            
        </activity>
        
        <activity android:name="com.line.novel.ui.AddNovelActivity">
            <intent-filter >
                <action android:name="com.line.novel.SERVICE_MANAGER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
